
@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model SpiceShare.Models.NearMeViewModel

@{
    ViewData["Title"] = "Spices near me";
}
@section metahead {
    <link rel="prefetch" href="/User/NearMeGeo" />
    <link rel="prefetch" href="/User/NearMeZip" />
}
<p>You can locate people near you that share spice in two different ways:</p>
<div class="bg">
    <a class="act" asp-action="NearMeGeo" asp-controller="User">Search using your current location</a>
    <a class="act" asp-action="NearMeZip" asp-controller="User">Search using country and zip/postal-code</a>
</div>
@{ Html.RenderPartial("_BaseJsInclude");}
@section nav {
    <ul>
        <li><a asp-controller="Home" asp-action="">Home</a></li>

        <li><a asp-controller="Home" asp-action="share">Share a spice</a></li>
    </ul>
}

@section bottomnav {
    <ul>
        <li><a asp-controller="Home" asp-action="share">Share a spice</a></li>
    </ul>
}